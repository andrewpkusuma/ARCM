<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grp22.arcm.DeviceListFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the device to connect"
            android:textSize="30dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"/>
        <FrameLayout
            android:id="@+id/placeholder"
            android:layout_width="480dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/start_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bluetooth_black_48px"
                    android:layout_gravity="center"
                    android:paddingBottom="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the toggle button to scan for devices"
                    android:textSize="12dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </FrameLayout>
        <ToggleButton
            android:id="@+id/scan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textOn="Scan: ON"
            android:textOff="Scan: OFF"
            android:textSize="18dp"
            android:padding="18dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>
        <ToggleButton
            android:id="@+id/toggle_socket"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textOn="Socket: OPEN"
            android:textOff="Socket: Close"
            android:textSize="18dp"
            android:padding="18dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>
